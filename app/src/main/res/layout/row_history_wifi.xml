<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/wifi"/>

    <!--ssid, max line for one row and when it's too long, truncate at the end -->
    <TextView
        android:id="@+id/row_ssid_wifi_history"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Ssid"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <!--state-->
        <TextView
            android:id="@+id/row_state_wifi_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/bg_button_cnect"
            android:padding="4dp"
            android:text="State"
            android:textColor="@android:color/white"
            android:textSize="8sp"/>

        <!--date-->
        <TextView
            android:id="@+id/row_date_wifi_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>